<section>
  <h2>Create New Workout</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
  
    <div class='exercise-container'>
        {{#each exercises }}
          <div class='exercise-card' >
            <img src={{gifUrl}} class="exercise-image"/>
            <label for={{name}} class="exercise-label"> {{name}}</label><br>
           </div>
        {{/each}}
    </div>


    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if workouts.length}}
<section>
  <h2>Your Workouts</h2>
  <ol>
    {{#each workouts as |workout|}}
    <li>
      {{> workout-info workout}}
      <button class="delete-link" data-id={{workout.id}}>Delete Workout</button>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}


<script src="/javascript/add-workout.js"></script>
<script src="/javascript/delete-workout.js"></script>
